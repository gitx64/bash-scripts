#!/usr/bin/env bash

hello(){
    local s=$1
    echo "hello $s"
}

goodbye(){
    local s=$1
    echo "goodbye $s"
}

if (($# == 0)); then
    echo "Name required!" >&2
    exit 1
fi

for name in "$@"; do
    case $name in
        d* | a*) hello $name;;
        *) goodbye $name;; 
    esac    
done

